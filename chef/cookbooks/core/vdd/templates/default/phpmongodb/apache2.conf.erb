<VirtualHost *:8082>
  DocumentRoot /opt/phpmongodb
  ServerName phpmongodb.dev
  RewriteEngine On
  ErrorLog /var/log/apache2/error.log
  LogLevel warn
  CustomLog /var/log/apache2/access.log combined
  ServerSignature On

  <Directory /opt/phpmongodb>
      AllowOverride All
      Require all granted
  </Directory>
</VirtualHost>