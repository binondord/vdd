<VirtualHost *:8082>
  DocumentRoot /opt/pimpmylogs
  ServerName logs.dev
  RewriteEngine On
  ErrorLog /var/log/apache2/error.log
  LogLevel warn
  CustomLog /var/log/apache2/access.log combined
  ServerSignature On

  <Directory /opt/pimpmylogs>
      AllowOverride All
      Require all granted
  </Directory>
</VirtualHost>