{
  "vm": {
    "ip": "192.168.44.44",
    "memory": "2048",
    "synced_folders": [
      {
        "host_path": "data/",
        "guest_path": "/var/www"
      },
      {
        "host_path": "../../Sites",
        "guest_path": "/var/www/vhosts"
      }
    ],
    "domain_suffix": "dev",
    "persist_db": true
  },
  "vdd": {
    "sites": {
      "[shortname]": {
        "site_name": "[shortname]",
        "type": "drupal7",
        "vhost": {
          "document_root" : "[shortname].dev/docroot",
          "url": "[shortname].dev",
          "alias": ["www.[shortname].dev"]
        }
      }
    }
  }
}
